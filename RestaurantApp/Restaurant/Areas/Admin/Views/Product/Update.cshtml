@model ProductDtoForUpdate

<form class="form" method="post" asp-action="Update" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductId">
    <div class="form-group my-2">
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId"></select>
    </div>
    <div class="form-group my-2">
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="Summary">Summary</label>
        <input asp-for="Summary" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control">
    </div>
    <div class="form-group my-3">
        <img class="rounded shadow" width="150" src="@Model?.ImageUrl">
    </div>
    <div class="form-group my-2">
        <label asp-for="ImageUrl"></label>
        <input name="file" type="file" class="form-control">
    </div>
    <button type="submit" class="btn btn-outline-success">Update</button>
</form>